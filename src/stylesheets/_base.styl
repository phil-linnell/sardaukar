* {
  box-sizing: border-box;
}

body {
  background: #f3efe7;
  color: #383224;
}

.container {
  padding: 70px;
  max-width: 700px;
  margin: 0 auto;
}

h1 {
  color: #584e39;
}

code {
  display: block;
  padding: 10px 15px;
  background: #fff;
  border-radius: 3px;
  font-size: 13px;
  line-height: 1.6;
  color: #444;
  margin-top: 30px;
}

blockquote {
  margin: 40px 0 0 0;
  line-height: 1.3;
  font-style: italic;
  color: #b7a57d;
  border-top: 1px solid #daccaf;
  border-bottom: 1px solid #daccaf;
  padding: 30px 0;
}
